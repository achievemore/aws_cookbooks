<% (['development', 'production'] + [@environment]).uniq.each do |env| -%>
<%= env %>:
  sessions:
    default:
      database: <%= @mongoid[:database].to_s.inspect %>
      hosts:
        - <%= (@mongoid[:host] || '127.0.0.1:27017').to_s.inspect %>
  options:
    identity_map_enabled: true
    raise_not_found_error: false
<% end %>
